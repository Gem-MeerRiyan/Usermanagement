<body>
    <div id="pss">
       
                    <center> <h2 style=" padding-left:60px; font-family:'Comic Sans MS'"> Forgot Password</h2> </center> </br ><br>

                    <label style="margin-left:35%; color:black; font-size:17px"> <b> E-mail:</b> </label>
                    <input type="text" id="email" style="height:45px; width:240px; border-radius:30px" ; placeholder="Enter E-mail"  name="uname" required> <br> <br><br>
                    <button type="button" id="submit_btn" onclick="ValidateEmail()" style="margin-left: 46%; border-radius: 10px;height:30px;width:100px; padding-right:10px;  background-color:darkgrey;color:black"> Send </button> <br><br><br><br><br><br>
                    <span id="lblError" style="color:red"> </span>
                    </br > </br >
                    <script type="text/javascript">
                        function ValidateEmail() {
                            var email = document.getElementById("email").value;
                            var lblError = document.getElementById("lblError");
                            lblError.innerHTML = "";
                            var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
                            if (!expr.test(email)) {
                                lblError.innerHTML = "Invalid email address.";
                            }

                        }
                    </script>



                </form>
            </div>
        </body>
